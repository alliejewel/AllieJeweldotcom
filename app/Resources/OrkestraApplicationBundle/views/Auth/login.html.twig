{% extends '::base.html.twig' %}

{% block container %}
<h2>Login</h2>
<div class="well">
    <p>Use your Twitter or GitHub account to login. Only your full name and OAuth identifier are stored.</p>
    <div class="row-fluid">
        <div class="span3 login-box">
            <p><a href="{{ path('hwi_oauth_service_redirect', { service: 'twitter' }) }}" class="zocial twitter">Sign in with Twitter</a></p>
            <hr/>
            <p><a href="{{ path('hwi_oauth_service_redirect', { service: 'github' }) }}" class="zocial github">Sign in with GitHub</a></p>
            <hr/>
        </div>
    </div>
    <h5>Sign in with Password</h5>
    <div class="row-fluid">
        <div class="span6">
            <form action="{{ path('login_check')}}" method="post" {{ form_enctype(form) }}>
                {{ form_errors(form) }}
                {{ form_row(form.username, { attr: { class: 'input-medium' } }) }}
                {{ form_row(form.password, { attr: { class: 'input-medium' } }) }}
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
