{% extends 'VeonikBlogBundle:Admin:base.html.twig' %}

{% set title = 'Groups' %}

{% block content %}
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th></th>
            <th>Date Modified</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('orkestra_group_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.role }}</td>
            <td>{{ entity.active ? 'Enabled' : 'Disabled' }}</td>
            <td>{% if entity.dateModified %}{{ entity.dateModified }}{% endif %}</td>
            <td>{% if entity.dateCreated %}{{ entity.dateCreated }}{% endif %}</td>
            <td>
                <a class="btn btn-mini btn-primary" href="{{ path('orkestra_group_edit', { 'id': entity.id }) }}">Edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block page_controls %}
<a class="btn btn-primary" href="{{ path('orkestra_group_new') }}">
    New Group
</a>
{% endblock %}
