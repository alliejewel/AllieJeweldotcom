{% extends 'VeonikBlogBundle:Admin:base.html.twig' %}

{% set title = 'Edit User' %}

{% block content %}
<form action="{{ path('orkestra_user_update', { 'id': user.id }) }}" method="post" {{ form_enctype(form) }}>
{% if user.username starts with 'github-' or user.username starts with 'twitter-' %}
    <div class="alert">
        This user is an OAuth user. Changing the username will prevent the user from logging in via their OAuth provider.
    </div>
{% endif %}
<div class="well">
    {{ form_widget(form) }}
    <p class="form-buttons">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </p>
</div>
</form>
{% endblock %}
