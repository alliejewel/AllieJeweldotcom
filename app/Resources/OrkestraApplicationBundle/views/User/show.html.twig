{% extends 'VeonikBlogBundle:Admin:base.html.twig' %}

{% set title = user %}

{% block content %}
<table class="table summary">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Expired</th>
            <td>{{ user.expired ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Locked</th>
            <td>{{ user.locked ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ user.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Last Modified</th>
            <td>{{ user.dateModified|default('Never') }}</td>
        </tr>
        <tr>
            <th>Date Created</th>
            <td>{{ user.dateCreated }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block page_controls %}
    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('orkestra_user_edit', { id: user.id }) }}">Edit User</a>
        <a class="btn" href="{{ path('orkestra_user_password_reset', { id: user.id }) }}">Reset Password</a>
    </div>
{% endblock %}