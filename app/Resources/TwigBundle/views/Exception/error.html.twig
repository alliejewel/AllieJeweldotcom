{% extends '::base.html.twig' %}

{% block title %}An Error Occurred{% endblock %}

{% block container %}
<h1>{{ block('title') }}</h1>
<p style="font-size: 12px; color: silver"></p>
<p><span style="font-weight: bold">{{ status_code }} {{ status_text }}</span>: {% block message %}An unexpected error occurred and the operation could not be completed. Please try again later.{% endblock %}</p>
<p class="spacer"></p>
{% if exception %}
<p style="font-size: 10px;">Additionally, the server responded with: {{ exception.message }}</p>
{% endif %}
{% endblock %}
