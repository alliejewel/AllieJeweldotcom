<div class="row-fluid" data-row="{{ form.vars.name }}">
    <div class="span2">
        {{ form_row(form.label, { attr: { class: 'input-small' } }) }}
    </div>
    <div class="span2">
        {{ form_row(form.route, { attr: { class: 'input-small' } }) }}
    </div>
    <div class="span2">
        {{ form_row(form.icon, { attr: { class: 'input-small' } }) }}
    </div>
    <div class="span2">
        {{ form_row(form.role, { attr: { class: 'input-small' } }) }}
    </div>
    <div class="span2">
        {{ form_row(form.not_role, { attr: { class: 'input-small' } }) }}
    </div>
</div>
