{% extends 'TylerSommerBlogBundle::base.html.twig' %}

{% block content %}
{% for entity in entities %}
    {% if loop.first %}
<h1>{{ entity.title }}</h1>
    {% else %}
<h2>{{ entity.title }}</h2>
    {% endif %}
<p class="post-author"><a href="{{ path('page_or_post', { slug: entity.slug }) }}">Posted{% if entity.active %} on {{ entity.datePublished.toUserTime.format('F j \\a\\t h:i A') }}{% endif %} by {{ entity.author }}</a></p>
{{ entity.body|raw }}
<div class="spacer"></div>
<p>{% for tag in entity.tags %}<a href="{{ path('search_tag', { name: tag.name }) }}" class="label label-primary">{{ tag }}</a> &nbsp; {% endfor %} {% for tag in entity.categories %}<a href="{{ path('search_category', { name: tag.name }) }}" class="label label-primary">{{ tag }}</a> &nbsp; {% endfor %}</p>
<div class="spacer"></div>
{% endfor %}
{% endblock %}
